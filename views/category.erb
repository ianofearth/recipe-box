<h2><%= @category.name() %> Category</h2>
<hr>
<br>

<p><strong>Recipes:</strong></p>
<br>
  <% if @category.recipes().any?() %>

    <ul>
      <% @category.recipes().each do |recipe| %>
        <li><a href= "/recipes/<%= recipe.id %>"><%= recipe.name %></a></li>
      <% end %>
    </ul>


  <% else %>
  <h2>There are no recipes</h2>
  <% end %>
  <br>

  <form action="/categories/<%= @category.id() %>/add_recipe" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="recipe_name">Select a recipe to add:  </label>
    <br>
    <select id="recipe_select_category" name="recipe_select_category">
      <% @recipes.each() do |recipe| %>
        <option value="<%= recipe.id() %>"><%= recipe.name() %></option>
      <% end %>
    </select>
    <br>
    <button type="submit">Add Recipe to Category</button>
  </form>

  <br>

  <form action ="/categories/<%= @category.id %>/remove_recipe" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="select_recipe">Select a recipe to remove from category</label>
    <br>
    <select id="recipe_select" name="recipe_select">
      <% @category.recipes.each() do |recipe| %>
        <option value="<%= recipe.id() %>"><%= recipe.name() %></option>
      <% end %>
    </select>
    <br>
    <button type="submit">Remove recipe from category</button>
  </form>

  <br>

  <a href="/categories">Return to categories</a>
