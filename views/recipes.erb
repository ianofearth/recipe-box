
<% if @recipes.any?() %>
  <h2>Here are all your recipes:</h2>

  <ul>
    <% @recipes.each do |recipe| %>
      <li><a href="/recipes/<%= recipe.id() %>"><%= recipe.name() %></a> [<a href='/recipes/<%= recipe.id() %>/edit'>edit</a>]</li>
    <% end %>
  </ul>

  <% else %>
  <h2>There are no recipes</h2>
  <% end %>

  <form action="/recipes/new" method="post">

    <label for="name">Recipe name:</label>
    <input id="name" name="name" type="text">
    <br>
    <label for="instructions">Instructions:</label>
    <input id="instructions" name="instructions" type="text">
    <br>
    <label for="rating">Rating:</label>
    <input id="rating" name="rating" type="text">
    <br>
    <button type="submit">Add Recipe</button>
  </form>

  <a href="/">Home</a>
